%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
%head
  %title Samenspel
  %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
  %meta{ :name => 'viewport', :content => 'width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;' }
  = csrf_meta_tag
  = include_stylesheets :mobile, :media => :all
  = organization_link_colour
  = analytics_tracking_code

%body{ :class => "#{location_name} #{I18n.locale} #{Rails.env}"}
  #header
    = header
    = navigation(@current_project,current_user.projects,current_user.recent_projects)
  #content
    = render 'shared/project_navigation', :project => @current_project if @current_project
    = yield
  #footer
    = link_to "Use full version", change_format_path(:html)
    = link_to t('shared.global_navigation.logout'), logout_path
